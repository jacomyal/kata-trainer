---
import Name from "../../components/Name";
import Layout from "../../layouts/Layout.astro";
import Wrap from "../../components/Wrap";
import { STANCES, STANCES_META, type StanceMeta } from "../../core/data";

export const getStaticPaths = () => {
  return STANCES.map((slug) => ({
    params: { slug },
  }));
};

const { slug } = Astro.params;
const stance = STANCES_META[slug] as StanceMeta;
---

<Layout title={`Position ${stance.name}`}>
  <main class="container">
    <section class="row">
      <h1><Name data={stance} /></h1>
      <p class="fs-4">{stance.kanji}</p>

      <p><Wrap content={stance.description} /></p>
    </section>
  </main>
</Layout>
