---
import Layout from "../layouts/Layout.astro";
import { FOOT_MOVES, FOOT_MOVES_META, HAND_MOVES, HAND_MOVES_META, KATAS, STANCES, STANCES_META } from "../core/data";
---

<Layout title="Shotokan Karate">
  <main class="container">
    <section class="row">
      <h1>Shotokan Karate</h1>

      <p>TODO</p>
    </section>

    <section class="row">
      <div class="col-4">
        <h2>Katas</h2>

        <ul class="unstyled">
          {
            KATAS.map((kata) => (
              <li>
                <a href={`/katas/${kata.slug}`}>{kata.name}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </section>

    <section class="row">
      <div class="col-4">
        <h2>Stances</h2>

        <ul class="unstyled">
          {
            STANCES.map((slug) => (
              <li>
                <a href={`/stances/${slug}`}>{STANCES_META[slug].englishName}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="col-4">
        <h2>Hand moves</h2>

        <ul class="unstyled">
          {
            HAND_MOVES.map((slug) => (
              <li>
                <a href={`/hands/${slug}`}>{HAND_MOVES_META[slug].englishName}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="col-4">
        <h2>Foot moves</h2>

        <ul class="unstyled">
          {
            FOOT_MOVES.map((slug) => (
              <li>
                <a href={`/feet/${slug}`}>{FOOT_MOVES_META[slug].name}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </section>
  </main>
</Layout>
